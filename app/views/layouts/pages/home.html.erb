<header>
  <h1>Click on the following characters in the image below!</h1>
  <div class="characters">
    <div class="character-wrapper">
      <%= image_tag "waldo", id: "Waldo", class: "character"%>
      <caption>Waldo</caption>
    </div>
    <div class="character-wrapper">
      <%= image_tag "wenda", id: "Wenda", class: "character"%>
      <caption>Wenda</caption>
    </div>
    <div class="character-wrapper">
      <%= image_tag "wizard", id: "Wizard", class: "character"%>
      <caption>Wizard</caption>
    </div>
    <div class="character-wrapper">
      <%= image_tag "odlaw", id: "Odlaw", class: "character"%>
      <caption>Odlaw</caption>
    </div>
    <div class="character-wrapper">
      <%= image_tag "woof", id: "Woof", class: "character"%>
      <caption>Woof</caption>
    </div>
  </div>
  <h1 id="timer">0:00</h1>
</header>
<main>
  <div class="image-wrapper">
    <%= image_tag "waldo4", id: "image"%>
  </div>
</main>
<div id="win-popup">
  <form>
    <h1 id="win-message">You found them!</h1>

    <label for="name">Enter your name</label>
    <input type="text" name="name" id="name">

    <button type="submit" class="btn" onclick="submitScore()">Submit High Score</button>
  </form>
</div>